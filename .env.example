# Client configuration
# Base URL for the FaceUp API hosted on Render
VITE_API_URL=https://faceup-api.onrender.com
# Supabase project URL used by the client application
VITE_SUPABASE_URL=https://your-project.supabase.co
# Supabase anon key scoped for client-side usage
VITE_SUPABASE_ANON_KEY=your-public-anon-key
# Stripe publishable key for checkout components (leave blank to disable Stripe UI)
VITE_STRIPE_PUBLIC_KEY=pk_test_change_me
# Logging verbosity for client-side diagnostics (error, warn, info, debug)
VITE_LOG_LEVEL=warn

# Server configuration
# Supabase service role key (server-side only, keep secret)
SUPABASE_SERVICE_ROLE_KEY=
# Toggle Supabase persistence layer usage in the API server
USE_SUPABASE=true
# PostgreSQL connection string for legacy Neon fallback (optional)
DATABASE_URL=
# Optional session secret for Express cookies
SESSION_SECRET=
# Stripe secret key for backend payment processing
STRIPE_SECRET_KEY=
# PayPal REST client id used by the API server
PAYPAL_CLIENT_ID=
# PayPal REST client secret used by the API server
PAYPAL_CLIENT_SECRET=
